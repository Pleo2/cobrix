# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org/

root = true

# Universal settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSX, TSX files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 4
max_line_length = 120

# React/TypeScript files (stricter formatting)
[*.{tsx,jsx}]
indent_size = 4
max_line_length = 100

# JSON files
[*.{json,json5,jsonc}]
indent_style = space
indent_size = 2

# YAML/TOML configuration files
[*.{yaml,yml,toml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = off

# CSS/SCSS/Less files
[*.{css,scss,less}]
indent_style = space
indent_size = 2
max_line_length = 120

# HTML/XML files
[*.{html,xml,svg}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Environment variables
[.env*]
indent_style = space
indent_size = 2
insert_final_newline = false
